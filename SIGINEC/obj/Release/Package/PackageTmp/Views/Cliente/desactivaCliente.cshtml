@model Model.Cliente
@{
    ViewBag.Title = "desactivaCliente";
    Layout = null;
}
@{Html.BeginForm("desactivaCliente", "Cliente", FormMethod.Post);}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" style="text-align:center;">
        Desactivar Cliente
        <i class="glyphicon glyphicon-remove"></i>
    </h4>
</div>
<div class="modal-body">
    @Html.HiddenFor(c => c.Id_Cliente)
    <h4> Esta seguro(a) de desactivar el cliente con el ID No. <b> @Model.Id_Cliente</b>.</h4>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
    <button type="submit" class="btn btn-danger" id="Entrar"> Desactivar </button>
</div>
@{Html.EndForm();}