@model Model.Seguimiento_BajoStock

@{
    ViewBag.Title = "Nuevo Seguimiento Bajo Stock";
    Layout = null;
    int idSolicitud = ViewBag.IdSolicitudBS;
}

@{Html.BeginForm("crearSeguimientoBS", "Dispositivo", FormMethod.Post);}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" style="text-align:center;">
        Crear Seguimiento Bajo Stock
        <i class="glyphicon glyphicon-plus"></i>
    </h4>
</div>
<div class="modal-body">
    @Html.HiddenFor(seg => seg.Id_Solicitud, new { Value = idSolicitud })
    <div class="form-group">
        <label> Seguimiento: </label>
        @Html.TextAreaFor(seg => seg.Seguimiento, new { @class = "form-control", @placeholder = "Ingrese su seguimiento" })
    </div>
    <div class="form-group" style="color:red;">
        @Html.ValidationSummary(false, "")
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
    <button type="submit" class="btn btn-primary" id="Entrar"> Guardar </button>
</div>
@{Html.EndForm();}

@* Scripts *@
<script src="~/Assets/js/jquery.validate.min.js"></script>
<script src="~/Assets/js/jquery.validate.unobtrusive.min.js"></script>

