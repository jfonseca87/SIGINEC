@model Model.ViewSolBajoStock

@{
    ViewBag.Title = "nuevaSolBajoStock";
    Layout = null;
    List<Model.Dispositivo> lstDispositivos = ViewBag.Dispositivos;
}


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" style="text-align:center;">
        Nueva Solicitud Bajo Stock
        <i class="glyphicon glyphicon-send"></i>
    </h4>
</div>
@{Html.BeginForm("nuevaSolBajoStock", "Dispositivo", FormMethod.Post);}
<div class="modal-body">
    <div class="form-group">
        <label> Dispositivo: </label>
        @Html.DropDownListFor(c => c.Id_Dispositivo, new SelectList(lstDispositivos, "Id_Dispositivo", "Nombre"), "Seleccione...", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label> Cantidad: </label>
        @Html.TextBoxFor(c => c.CantidadDisp, new { @class = "form-control", @placeholder = "Cantidad a solicitar" })
    </div>
    <div class="form-group">
        <button class="btn btn-info" id="selDispositivos" type="button"> Seleccionar </button>
    </div>
    <div class="form-group">
        <table class="table table-responsive table-bordered table-hover">
            <thead>
                <tr>
                    <th> Id </th>
                    <th> Dispositivo </th>
                    <th> Cantidad </th>
                </tr>
            </thead>
            <tbody id="tDispositivos"></tbody>
        </table>
    </div>
    
    <div class="form-group">
        <label> Observaciones: </label>
        @Html.TextAreaFor(c => c.Observaciones, new { @class = "form-control", @placeholder = "Observaciones" })
    </div>
    <div class="form-group" style="color:red;" id="mensaje">
        @Html.ValidationSummary(false, "")
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
    <button type="submit" class="btn btn-primary disabled" id="NuevaBS">Crear Solicitud</button>
</div>
@{Html.EndForm();}

@* Scripts *@
<script src="~/Assets/js/jquery.validate.min.js"></script>
<script src="~/Assets/js/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Assets/js/Logic.js"></script>
