@model Model.ViewCambioPassword

@{
    ViewBag.Title = "Cambia Password Administrador";
    Layout = null;
}

@{Html.BeginForm("cambiaPassword", "Usuario", FormMethod.Post);}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" style="text-align:center;">
        Cambio de Contraseña - @Model.Nombres
        <i class="glyphicon glyphicon-check"></i>
    </h4>
</div>
@Html.HiddenFor(vcp => vcp.Id_Usuario)
@Html.HiddenFor(vcp => vcp.Nombres)
<div class="modal-body">
    <div class="form-group">
        <label> Nueva Contraseña: </label>
        @Html.PasswordFor(vcp => vcp.Nuevo_Password, new { @class = "form-control", @placeholder = "Nueva Contraseña" })
    </div>
    <div class="form-group">
        <label> Confirme Contraseña: </label>
        @Html.PasswordFor(vcp => vcp.Confirma_Password, new { @class = "form-control", @placeholder = "Confirma Contraseña" })
    </div>
    <div class="form-group" style="color:red;">
        <p class="validacion-password"></p>
        @Html.ValidationSummary(false, "")
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
    <button type="submit" class="btn btn-primary"> Cambiar </button>
</div>
@{Html.EndForm();}

@* Scripts *@
<script src="~/Assets/js/jquery.validate.min.js"></script>
<script src="~/Assets/js/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Assets/js/Logic.js"></script>