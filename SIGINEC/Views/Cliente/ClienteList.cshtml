@model Model.Helpers.PagedData<Model.ViewListCliente>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th> Id </th>
            <th> Identificación </th>
            <th> Nombres </th>
            <th> Dirección </th>
            <th> Teléfono </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cli in Model.Data)
        {
            <tr>
                <td> @Html.DisplayFor(c => cli.Id_Cliente) </td>
                <td> @Html.DisplayFor(c => cli.Identificacion) </td>
                <td> @Html.DisplayFor(c => cli.Nombres) </td>
                <td> @Html.DisplayFor(c => cli.Direccion) </td>
                <td> @Html.DisplayFor(c => cli.Telefono)</td>
                <td style="text-align:right;">
                    <button type="button" alt="Desactivar" title="Desactivar" class="btn btn-danger desCliente" data-id="@cli.Id_Cliente">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </button>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="6" style="text-align:center;">
                <ul class="pagination">
                    @for (int i = 1; i <= Model.NumberOfPages; i++)
                    {
                        if (i == Model.CurrentPage)
                        {
                            <li class="active">
                                <a class="page-cliente" href="javascript:void();">@i</a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a class="page-cliente" href="javascript:void();">@i</a>
                            </li>
                        }
                    }
                </ul>
            </td>
        </tr>
    </tfoot>
</table>

<script src="~/Assets/js/Logic.js"></script>