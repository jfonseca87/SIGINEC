@model Model.Helpers.PagedData<Model.ViewSolicitudDispositivo>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th> Id </th>
            <th> Cliente </th>
            <th> Dispositivo </th>
            <th> Cantidad </th>
            <th> Estado </th>
            <th> Fecha Solicitud </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sol in Model.Data)
        {
            <tr>
                <td> @Html.DisplayFor(s => sol.IdSolicitud) </td>
                <td> @Html.DisplayFor(s => sol.Cliente) </td>
                <td> @Html.DisplayFor(s => sol.Dispositivo) </td>
                <td> @Html.DisplayFor(s => sol.Cantidad) </td>
                <td> @Html.DisplayFor(s => sol.Estado) </td>
                <td> @Html.DisplayFor(s => sol.FSolicitud) </td>
                <td style="text-align:right;">
                    <button type="button" alt="Detalles" title="Detalles" class="btn btn-success" data-id="@sol.IdSolicitud">
                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                    </button>
                    <button type="button" alt="Editar" title="Editar" class="btn btn-warning" data-id="@sol.IdSolicitud">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </button>
                    <button type="button" alt="Agregar Cantidades" title="Agregar Cantidades" class="btn btn-danger" data-id="@sol.IdSolicitud">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    </button>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="7" style="text-align:center;">
                <ul class="pagination">
                    @for (int i = 1; i <= Model.NumberOfPages; i++)
                    {
                        if (i == Model.CurrentPage)
                        {
                            <li class="active">
                                <a class="page-number" href="javascript:void();">@i</a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a class="page-number" href="javascript:void();">@i</a>
                            </li>
                        }
                    }
                </ul>
            </td>
        </tr>
    </tfoot>
</table>

<script src="~/Assets/js/Logic.js"></script>