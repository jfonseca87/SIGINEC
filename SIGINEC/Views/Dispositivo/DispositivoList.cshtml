@model Model.Helpers.PagedData<Model.Dispositivo>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th> Id </th>
            <th> Nombre </th>
            <th> Marca </th>
            <th> Modelo </th>
            <th> Cantidad </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var disp in Model.Data)
        {
            <tr>
                <td> @Html.DisplayFor(d => disp.Id_Dispositivo) </td>
                <td> @Html.DisplayFor(d => disp.Nombre) </td>
                <td> @Html.DisplayFor(d => disp.Marca) </td>
                <td> @Html.DisplayFor(d => disp.Modelo) </td>
                <td> @Html.DisplayFor(d => disp.Cantidad) </td>
                <td style="text-align:right;">
                    <button type="button" alt="Detalles" title="Detalles" class="btn btn-success detalles" data-id="@disp.Id_Dispositivo">
                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                    </button>
                    <button type="button" alt="Editar" title="Editar" class="btn btn-warning edita" data-id="@disp.Id_Dispositivo" id="editaDispositivo">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </button>
                    <button type="button" alt="Agregar Cantidades" title="Agregar Cantidades" class="btn btn-danger agregar" data-id="@disp.Id_Dispositivo" id="agregaCantidad">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    </button>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="6" style="text-align:center;">
                <ul class="pagination">
                    @for (int i = 1; i <= Model.NumberOfPages; i++)
                    {
                        if (i == Model.CurrentPage)
                        {
                            <li class="active">
                                <a class="page-number" href="javascript:void();">@i</a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a class="page-number" href="javascript:void();">@i</a>
                            </li>
                        }
                    }
                </ul>
            </td>
        </tr>
    </tfoot>
</table>

<script src="~/Assets/js/Logic.js"></script>