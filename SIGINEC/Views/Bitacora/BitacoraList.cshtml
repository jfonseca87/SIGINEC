@model Model.Helpers.PagedData<Model.ViewListBitacora>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th> Id </th>
            <th> Dispositivo </th>
            <th> Estado </th>
            <th> Usuario Registra </th>
            <th> Fecha Registro </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bit in Model.Data)
        {
            <tr>
                <td> @Html.DisplayFor(b => bit.Id_Bitacora) </td>
                <td> @Html.DisplayFor(b => bit.Nom_Dispositivo) </td>
                <td> @Html.DisplayFor(b => bit.Estado_Dispositivo) </td>
                <td> @Html.DisplayFor(b => bit.Usuario_Registra) </td>
                <td> @Html.DisplayFor(b => bit.Fecha_Registro) </td>
                <td style="text-align:right;">
                    <button type="button" alt="Detalles" title="Detalles" class="btn btn-success detBitacora" data-id="@bit.Id_Bitacora">
                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                    </button>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="6" style="text-align:center;">
                <ul class="pagination">
                    @for (int i = 1; i <= Model.NumberOfPages; i++)
                    {
                        if (i == Model.CurrentPage)
                        {
                            <li class="active">
                                <a class="page-bitacora" href="javascript:void();">@i</a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a class="page-bitacora" href="javascript:void();">@i</a>
                            </li>
                        }
                    }
                </ul>
            </td>
        </tr>
    </tfoot>
</table>

<script src="~/Assets/js/Logic.js"></script>