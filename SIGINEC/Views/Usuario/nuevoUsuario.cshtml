@model Model.ViewUsuario

@{
    ViewBag.Title = "Nuevo Usuario";
    Layout = null;
    List<Model.Persona> lstPersonas = ViewBag.Personas;
}

@{Html.BeginForm("nuevoUsuario", "Usuario", FormMethod.Post);}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" style="text-align:center;">
        Nuevo Usuario
        <i class="glyphicon glyphicon-plus"></i>
    </h4>
</div>
<div class="modal-body">
    <div class="form-group">
        <label> Persona: </label>
        @Html.DropDownListFor(u => u.Persona, new SelectList(lstPersonas, "Id_Persona", "Nombres_Mostrar"), "Seleccione...", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label> Usuario: </label>
        @Html.TextBoxFor(u => u.Usuario, new { @class = "form-control", @placeholder = "Ingrese el usuario" })
    </div>
    <div class="form-group">
        <label> Contraseña: </label>
        @Html.TextBoxFor(u => u.Contrasena, new { @class = "form-control", @placeholder = "Ingrese una contraseña" })
    </div>
    <div class="form-group">
        <label> Tipo Usuario: </label>
        @Html.DropDownListFor(u => u.Tipo_Usuario, new SelectList(new[] { new SelectListItem { Value = "adm", Text = "Administrador" }, new SelectListItem { Value = "usu", Text = "Usuario" }}, "Value", "Text"), "Seleccione...", new { @class = "form-control" })
    </div>
    <div class="form-group" style="color:red;">
        @Html.ValidationSummary(false, "")
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
    <button type="submit" class="btn btn-primary"> Guardar </button>
</div>
@{Html.EndForm();}

@* Scripts *@
<script src="~/Assets/js/jquery.validate.min.js"></script>
<script src="~/Assets/js/jquery.validate.unobtrusive.min.js"></script>