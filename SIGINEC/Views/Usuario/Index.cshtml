@model Model.Helpers.PagedData<Model.ViewListUsuario>
@{
    ViewBag.Title = "Usuarios";
    List<Model.Menu1> lstMenu = ViewBag.Menu1;
    List<Model.Menu2> lstMenu2 = ViewBag.Menu2;
    string mensaje = ViewBag.Mensaje;
}
@section Menu1 {
    @foreach (var item in lstMenu)
    {
        if (item.pagina == "Administracion")
        {
            <li class="active"> <a href="~/@item.pagina/Index"> @item.pagina </a> </li>
        }
        else
        {
            <li> <a href="~/@item.pagina/Index"> @item.pagina </a> </li>
        }
    }
}
@section Menu2 {
    @foreach (var subP in lstMenu2)
    {
        if (subP.subPagina == "Personas")
        {
            <a href="~/Persona/Index" class="list-group-item"> <b> @subP.subPagina </b> </a>
        }
        else if (subP.subPagina == "Usuarios")
        {
            <a href="~/Usuario/Index" class="list-group-item active"> <b> @subP.subPagina </b> </a>
        }
        else if (subP.subPagina == "Clientes")
        {
            <a href="~/Cliente/Index" class="list-group-item"> <b> @subP.subPagina </b> </a>
        }
        else if (subP.subPagina == "Responsables")
        {
            <a href="~/Administracion/Responsables" class="list-group-item"> <b> @subP.subPagina </b> </a>
        }
    }
}
<div class="jumbotron" style="text-align:center;">
    <h2> Usuarios <i class="glyphicon glyphicon-user"></i> </h2>
</div>
<div>
    <button class="btn btn-primary" id="nuevoUsuario"> Nuevo Usuario </button>
</div>
<br />
@if (mensaje != "")
{
    <div class="alert alert-success"> @mensaje </div>
}
<hr />
<br />
<div id="dispositivo-list" class="container col-xs-12">
    @Html.Partial("UsuarioList")
</div>

<script src="~/Assets/js/Logic.js"></script>