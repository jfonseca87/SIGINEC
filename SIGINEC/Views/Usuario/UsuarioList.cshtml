@model Model.Helpers.PagedData<Model.ViewListUsuario>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th> Id </th>
            <th> Documento </th>
            <th> Nombres </th>
            <th> Usuario </th>
            <th> Tipo Usuario </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usu in Model.Data)
        {
            <tr>
                <td> @Html.DisplayFor(u => usu.Id_Usuario) </td>
                <td> @Html.DisplayFor(u => usu.Num_Documento) </td>
                <td> @Html.DisplayFor(u => usu.Nombres) </td>
                <td> @Html.DisplayFor(u => usu.NickName) </td>
                <td> 
                    @(usu.Tipo_Usuario == "adm" ? "Administrador" : "Usuario" )
                </td>
                <td style="text-align:right;">
                    <button type="button" alt="Cambio Contraseña" title="Cambio Contraseña" class="btn btn-warning cambiaPassword" data-id="@usu.Id_Usuario">
                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                    </button>
                    <button type="button" alt="Desactivar" title="Desactivar" class="btn btn-danger desUsuario" data-id="@usu.Id_Usuario">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </button>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="6" style="text-align:center;">
                <ul class="pagination">
                    @for (int i = 1; i <= Model.NumberOfPages; i++)
                    {
                        if (i == Model.CurrentPage)
                        {
                            <li class="active">
                                <a class="page-usuario" href="javascript:void();">@i</a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a class="page-usuario" href="javascript:void();">@i</a>
                            </li>
                        }
                    }
                </ul>
            </td>
        </tr>
    </tfoot>
</table>

<script src="~/Assets/js/Logic.js"></script>