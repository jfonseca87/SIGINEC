@model Model.Helpers.PagedData<Model.Persona>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th> Id </th>
            <th> Documento </th>
            <th> Tipo Documento </th>
            <th> Nombres </th>
            <th> Email </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var per in Model.Data)
        {
            <tr>
                <td> @Html.DisplayFor(p => per.Id_Persona) </td>
                <td> @Html.DisplayFor(p => per.Numero_Documento) </td>
                <td align="center"> @Html.DisplayFor(p => per.Tipo_Documento) </td>
                <td> @per.Nombre_1 @per.Apellido_1 </td>
                <td> @Html.DisplayFor(p => per.Email) </td>
                <td style="text-align:right;">
                    <button type="button" alt="Editar" title="Editar" class="btn btn-warning editaPersona" data-id="@per.Id_Persona">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </button>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="6" style="text-align:center;">
                <ul class="pagination">
                    @for (int i = 1; i <= Model.NumberOfPages; i++)
                    {
                        if (i == Model.CurrentPage)
                        {
                            <li class="active">
                                <a class="page-persona" href="javascript:void();">@i</a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a class="page-persona" href="javascript:void();">@i</a>
                            </li>
                        }
                    }
                </ul>
            </td>
        </tr>
    </tfoot>
</table>

<script src="~/Assets/js/Logic.js"></script>